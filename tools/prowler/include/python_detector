# detector of python and boto3
pythonDetector(){
    export PYTHON_BIN=$(which python3)
    PYTHON_PIP_OCI=$(pip --disable-pip-version-check list|grep oci)
    if [ -z "${PYTHON_BIN}" ]; then
        echo -e "\n$RED ERROR!$NORMAL python not found. Make sure it is installed correctly and in your \$PATH\n"
        EXITCODE=1
        exit $EXITCODE
    else
        PYTHON_INSTALLED=1
        if [ -z "${PYTHON_PIP_OCI}" ]; then
            echo -e "\n$RED ERROR!$NORMAL python library oci not found. Make sure it is installed correctly\n"
            EXITCODE=1
            exit $EXITCODE
        else
            PYTHON_PIP_OCI_INSTALLED=1
        fi
    fi  
}